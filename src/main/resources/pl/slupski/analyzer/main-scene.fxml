<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<GridPane fx:id="gridPane"
          fx:controller="pl.slupski.analyzer.FXMLController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" minWidth="500">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Text text="Welcome"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>


    <HBox spacing="10" alignment="CENTER" GridPane.fillWidth="true" GridPane.rowIndex="1">
        <Label text="Path to folder:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="pathInput" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button text="Select" onAction="#handleSubmitButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </HBox>

    <!--    <Text fx:id="actiontarget"-->
    <!--          GridPane.columnIndex="1" GridPane.rowIndex="6"/>-->

    <stylesheets>
        <URL value="@main-scene.css"/>
    </stylesheets>
</GridPane>